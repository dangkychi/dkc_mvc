@model DuHoc.Models.NewsPost

<div class="container mt-5">
    <h1>@Model.Title</h1>
    <p class="text-muted">@Model.TimePosted</p>
    
    <div class="row">
        <div class="col-md-8">
            <img src="~/images/@Model.Images" class="img-fluid" alt="News Image" />
            <p></p>
            <p>@Html.Raw(Model.Content)</p>
            <p class="text-muted">Create by: @Model.UserPosted</p>
        </div>
        <div class="col-md-4">
            <partial name="~/Views/Shared/_PartialCountry.cshtml" />
        </div>
    </div>
    
</div>
