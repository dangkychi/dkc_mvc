@model DuHoc.Models.Country

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>@Html.DisplayFor(model => model.Name)</h1>
            <p class="text-muted">Châu lục: @Html.DisplayFor(model => model.Continent)</p>
            <img src="~/images/@Model.Images" class="img-fluid" alt="Country Image" />
            <p></p>
            <p>@Html.DisplayFor(model => model.Introduce)</p>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Các quốc gia du học</h3>
                    <ul class="list-unstyled">
                        <li><a href="#">United Kingdom</a></li>
                        <li><a href="#">Australia</a></li>
                        <li><a href="#">America</a></li>
                        <li><a href="#">Canada</a></li>
                        <li><a href="#">New Zealand</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
