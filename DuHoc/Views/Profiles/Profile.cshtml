@model IEnumerable<DuHoc.Models.Profile>

@foreach (var item in Model.Where(a => a.User.user_name == User.Identity.Name))
{
    <dl class="row">
        <dt class="col-sm-2">
            Full name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.full_name)
        </dd>
        <dt class="col-sm-2">
            Birthdate: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.birthdate)
        </dd>
        <dt class="col-sm-2">
            Phone number: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.phone_number)
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.email)
        </dd>
        <dt class="col-sm-2">
            Address:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.address)
        </dd>      
    </dl>
    <a asp-action="Profile_Edit" asp-route-id="@item.user_id">Edit</a>
}

