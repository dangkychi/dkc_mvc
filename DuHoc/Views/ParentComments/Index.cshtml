@model IEnumerable<DuHoc.Models.ParentComment>

@{
    Layout = "_Layout_Admin";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-area="" asp-controller="Home" asp-action="Admin" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-area="" asp-controller="ParentComments" asp-action="Index" class="nav-link">Danh Sách Bình Luận</a>
        </li>
    </ul>
}

<style>
    a {
        text-decoration: none;
    }
</style>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Comment</h4>

            <div class="card-tools">
                <a asp-action="Create" class="btn btn-primary">Thêm Mới</a>
            </div>
        </div>
        <div class="card-body">         
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Text)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Comment_Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.user_name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Text)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Comment_Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.user_name)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ParentComment_Id" class="btn btn-sm btn btn-primary">
                                        Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ParentComment_Id" class="btn btn-sm btn-info">
                                        Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ParentComment_Id" class="btn btn-sm btn-danger">
                                        Delete
                                    </a>
                                </td>                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
